<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:gravity="center">

    <!-- Pot Color (Circle) -->
    <View
        android:id="@+id/pot_background"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/rounded_square_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <!-- Pot Icon (Center of Background) -->
    <ImageView
        android:id="@+id/pot_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="@id/pot_background"
        app:layout_constraintBottom_toBottomOf="@id/pot_background"
        app:layout_constraintStart_toStartOf="@id/pot_background"
        app:layout_constraintEnd_toEndOf="@id/pot_background"
        android:src="@drawable/pots_icon" />


    <!-- Pot Name -->
    <TextView
        android:id="@+id/pot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pot Name"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/pot_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/incomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pot Amount"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/pot_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>